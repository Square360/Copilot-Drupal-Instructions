{
  "name": "square360/copilot-drupal-instructions",
  "description": "Reusable GitHub Copilot instruction files for Drupal projects",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "drupal",
    "github-copilot",
    "documentation",
    "coding-standards",
    "square360"
  ],
  "authors": [
    {
      "name": "Square360",
      "homepage": "https://square360.com"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "autoload": {
    "classmap": [
      "copilot-configuration/scripts/ComposerScripts.php"
    ]
  },
  "scripts": {
    "post-install-cmd": [
      "CopilotDrupalInstructions\\ComposerScripts::postInstall"
    ],
    "post-update-cmd": [
      "CopilotDrupalInstructions\\ComposerScripts::postUpdate"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.x-dev"
    }
  },
  "archive": {
    "exclude": [
      "/docs",
      "/.git",
      "/.gitattributes",
      "/.gitignore",
      "/CHANGELOG.md",
      "/COPILOT-PROMPT.md",
      "/LICENSE"
    ]
  }
}