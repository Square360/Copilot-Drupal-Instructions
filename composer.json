{
  "name": "square360/copilot-drupal-instructions",
  "description": "Reusable GitHub Copilot instruction files for Drupal projects",
  "type": "composer-plugin",
  "license": "MIT",
  "keywords": [
    "drupal",
    "github-copilot",
    "documentation",
    "coding-standards",
    "square360"
  ],
  "authors": [
    {
      "name": "Square360",
      "homepage": "https://square360.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "composer-plugin-api": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "CopilotDrupalInstructions\\": "copilot-configuration/scripts/"
    }
  },
  "extra": {
    "class": "CopilotDrupalInstructions\\ComposerPlugin",
    "branch-alias": {
      "dev-master": "1.x-dev"
    }
  },
  "archive": {
    "exclude": [
      "/docs",
      "/.git",
      "/.gitattributes",
      "/.gitignore",
      "/CHANGELOG.md",
      "/COPILOT-PROMPT.md",
      "/LICENSE"
    ]
  }
}